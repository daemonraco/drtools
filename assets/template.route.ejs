'use strict';

const express = require('express');
const router = express.Router();

router.get('/', (req, res) => {
    res.json({
        message: 'it works!'
    });
});

router.all('*', (req, res) => {
    res.status(404).json({
        message: `Path '${req.originalUrl}' is not available.`
    });
});

module.exports = router;
