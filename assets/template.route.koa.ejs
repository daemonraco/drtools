'use strict';

const Router = require('koa-router');

const config = global['<%= globalConstant %>'];
const router = Router();

router.get('/', async ctx => {
    ctx.body = {
        message: 'it works!'
    };
});

router.all('*', async ctx => {
    ctx.throw(404, {
        message: `Path '${ctx.originalUrl}' is not available.`
    });
});

module.exports = router;
