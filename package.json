{
    "name": "drtools",
    "version": "0.3.1",
    "description": "Set of useful tools",
    "main": "dist/core/drtools",
    "types": "dist/core/drtools",
    "bin": {
        "drtools-generator": "./dist/commands/generator/cmd.js",
        "drtools-server": "./dist/commands/server/cmd.js"
    },
    "scripts": {
        "start": "npm run build:live",
        "prebuild": "rm -frv dist/*",
        "build": "./node_modules/.bin/tsc",
        "postbuild": "chmod -v +x dist/commands/*/cmd.js",
        "build:live": "./node_modules/.bin/tsc --watch",
        "gen:docs": "node .tools/gen-docs.js",
        "live:server": "./test/assets/start-live.sh",
        "live:serverui": "bash .tools/build-serverui.sh live",
        "build:serverui": "bash .tools/build-serverui.sh",
        "pretest": "./test/assets/start.sh",
        "test": "./node_modules/mocha/bin/mocha || true",
        "posttest": "./test/assets/stop.sh"
    },
    "keywords": [
        "automatic loaders",
        "express",
        "loaders",
        "plugins",
        "configs"
    ],
    "author": {
        "name": "Alejandro Dario Simi",
        "url": "http://daemonraco.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/daemonraco/drtools.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^8.10.20",
        "chai": "^4.1.2",
        "chai-http": "^4.0.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.17.5",
        "suppose": "^0.6.2",
        "typescript": "^2.9.2"
    },
    "dependencies": {
        "ajv": "^6.5.2",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.1",
        "cheerio": "^1.0.0-rc.2",
        "commander": "^2.16.0",
        "ejs": "^2.6.1",
        "express": "^4.16.3",
        "glob": "^7.1.2",
        "http-status-codes": "^1.3.0",
        "jsonpath-plus": "^0.16.0",
        "lorem-ipsum": "^1.0.5",
        "marked": "^0.3.19",
        "md5": "^2.2.1",
        "mime-types": "^2.1.18",
        "request": "^2.87.0",
        "request-promise-native": "^1.0.5"
    }
}
