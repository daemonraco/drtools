{
    "name": "drtools",
    "version": "0.15.0",
    "description": "Set of useful tools",
    "main": "dist/core/drtools",
    "types": "dist/core/drtools",
    "bin": {
        "drtools-generator": "./dist/commands/generator/cmd.js",
        "drtools-server": "./dist/commands/server/cmd.js"
    },
    "scripts": {
        "start": "npm run build:live",
        "prebuild": "rm -frv dist/*",
        "build": "tsc --skipLibCheck",
        "postbuild": "chmod -v +x dist/commands/*/cmd.js && npm run gen:docs",
        "build:live": "tsc --skipLibCheck --watch",
        "gen:docs": "node .tools/gen-docs.js",
        "live:server": "./test/assets/start-live.sh",
        "build:serverui": "cd web-ui/ui-ng; npm run build",
        "mocha": "mocha",
        "pretest": "./test/assets/start.sh",
        "test": "nyc --reporter=lcov --reporter=text --reporter=html mocha || true",
        "posttest": "./test/assets/stop.sh",
        "test:view": "npx live-server --port=4201 --no-browser coverage"
    },
    "keywords": [
        "automatic loaders",
        "configs",
        "express",
        "koa",
        "loaders",
        "plugins"
    ],
    "author": {
        "name": "Alejandro Dario Simi",
        "url": "http://daemonraco.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/daemonraco/drtools.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.16",
        "@types/cookies": "^0.7.6",
        "@types/express": "^4.17.11",
        "@types/fs-extra": "^9.0.10",
        "@types/koa-static": "^4.0.1",
        "@types/md5": "^2.3.0",
        "@types/node": "^14.14.37",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "mocha": "^8.3.2",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "shelljs": "^0.8.4",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "ajv": "^8.0.5",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.0",
        "cheerio": "^1.0.0-rc.5",
        "commander": "^7.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "fs-extra": "^9.1.0",
        "glob": "^7.1.6",
        "http-status-codes": "^2.1.4",
        "jsonpath-plus": "^5.0.4",
        "koa": "^2.13.1",
        "koa-router": "^10.0.0",
        "koa-static": "^5.0.0",
        "lorem-ipsum": "^2.0.3",
        "marked": "^2.0.1",
        "md5": "^2.3.0",
        "mime-types": "^2.1.30",
        "request": "^2.88.2",
        "request-promise-native": "^1.0.9",
        "tslib": "^2.1.0"
    }
}